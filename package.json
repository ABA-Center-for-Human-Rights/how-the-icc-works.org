  "main": "webpack.config.js",
  "dependencies": {
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0"
  },
  "devDependencies": {
    "babel-core": "^6.20.0",
    "babel-loader": "^6.2.9",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "critical": "^0.8.1",
    "cssnano": "^3.8.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "postcss": "^5.2.6",
    "postcss-cli": "^2.6.0",
    "postcss-discard-comments": "^2.0.4",
    "postcss-import": "^9.0.0",
    "postcss-loader": "^1.2.0",
    "react": "^15.4.1",
    "react-addons-update": "^15.4.1",
    "react-dom": "^15.4.1",
    "tachyons": "^4.5.5",
    "waypoints": "^4.0.1",
    "webpack": "^1.14.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "postcss -c 'src/_app/css/postcss.config.js'",
    "hotbuild:css": "copyfiles -f src/assets/css/* public/assets/css",
    "watch:css": "onchange 'src/_app/css/**/*.css' -- run-s build:css hotbuild:css",
    "critical:css": "critical public/index.html --base public --minify --css public/assets/css/main.css > src/_app/_includes/global/critical.css",
    "start": "build:css"
  },
  "repository": {
